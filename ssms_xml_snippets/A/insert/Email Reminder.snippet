<CodeSnippet Format="1.0.0">
<Header>
<Title>Email Reminder</Title>
<Shortcut></Shortcut>
<Description>Create a new scheduled email using email microservice table</Description>
<Author>Bryan Jenks</Author>
<SnippetTypes><SnippetType>Expansion</SnippetType></SnippetTypes>
</Header>
<Snippet>
<Declarations>
<Literal>
<!-- 	<ID>EMAIL_PROFILE</ID>
	<ToolTip>The email profile that will send the message</ToolTip>
	<Default>mailer</Default>
	
	<ID>RECIPIENTS</ID>
	<ToolTip>The email email TO field</ToolTip>
	<Default>RECIPIENT_LIST</Default>

	<ID>SUBJECT</ID>
	<ToolTip>The subject line of the email</ToolTip>
	<Default>SUBJECT</Default>
	
	<ID>BODY</ID>
	<ToolTip>The body of the email message</ToolTip>
	<Default>BODY</Default>
	
	<ID>FORMAT</ID>
	<ToolTip>The format of the email either 'TEXT' or 'HTML'</ToolTip>
	<Default>HTML</Default>
	
